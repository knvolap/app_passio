<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/Top_ProFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:itemBackground="@android:color/holo_green_light"
                app:itemIconTint="@drawable/selector"
                app:itemTextColor="@drawable/selector"
                app:menu="@menu/menu_top" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/ic_background_home4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_tichdiem"
                        android:layout_width="355dp"
                        android:layout_height="228dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_membership1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="CHẠM VÀO THẺ ĐỂ MỞ MÃ TÍCH ĐIỂM"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="Ưu đãi dành cho bạn"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_chon_mon"
                        android:layout_width="325dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_ch_1"
                        app:shapeAppearanceOverlay="@style/roundimageview" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="Ưu đãi dành cho bạn"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerView_home"
                        android:layout_width="389dp"
                        android:layout_height="1000dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        tools:layout_editor_absoluteY="1dp" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flt_order_107"
        style="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#00000000"
        android:clickable="true"
        app:backgroundTint="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/ic_order4"
        app:borderWidth="0dp"
        app:fabCustomSize="100dp"
        app:fabSize="normal"
        app:maxImageSize="90dp" />

</RelativeLayout>